class {ScreenName}Screen extends ConsumerWidget {
  const {ScreenName}Screen({super.key});

  static const routeName = '{route_name}';

  @override
  Widget build(BuildContext context, WidgetRef ref) {
    // Requires MaterialApp.router with localizationsDelegates configured
    final l10n = AppLocalizations.of(context);
    assert(l10n != null, 'AppLocalizations missing - check MaterialApp.router localizationsDelegates');
    if (l10n == null) {
      debugPrint('[{ScreenName}Screen] AppLocalizations.of returned null for $context');
      return const SizedBox.shrink();
    }

    return Scaffold(
      backgroundColor: DsColors.splashBg, // TODO: Adjust per screen type (see colors.dart)
      body: SafeArea(
        child: Padding(
          padding: const EdgeInsets.symmetric(horizontal: Spacing.l),
          child: Column(
            crossAxisAlignment: CrossAxisAlignment.start,
            children: [
              const SizedBox(height: Spacing.xl),
              // Content here
            ],
          ),
        ),
      ),
    );
  }
}
